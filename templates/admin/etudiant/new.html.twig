{% extends 'base.html.twig' %}

{% set action = app.current_route == "app_admin_etudiant_nouveletudiant" ? 'Création': 'Édition' %}

{% block title %}{{ action }} Étudiant{% endblock %}

{% block body %}
    <section>
        <div>
            <a href="{{ path('app_admin_index') }}">Retour au menu principal</a>
        </div>
    </section>
<section>
    <h1>{{ action }} Étudiant</h1>
    <div>
    {{ form_start(form) }}
    {{ form_row(form.nom, {label:'Nom'}) }}
    {{ form_row(form.prenom, {label:'Prénom'}) }}
    {{ form_row(form.telephone, {label:'Numéro de téléphone'}) }}
        {{ form_row(form.email,{label:'Email'}) }}
    {{ form_row(form.login,{label:'Login'}) }}
    {{ form_row(form.password,{label:'Mot de Passe'}) }}
    {{ form_row(form.commentaire,{label:'Commentaire'}) }}
    {{ form_row(form.role,{label:'Role'}) }}
{#    {{ form_row(form.Formation ,{label:'formation'}) }}#}
        <button type="submit">Envoyer</button>
    {{ form_end(form) }}
    </div>
    <div>
        <p><a href="{{ path('app_admin_etudiant_liste') }}">Liste des étudiants</a></p>
    </div>
</section>
{% endblock %}
